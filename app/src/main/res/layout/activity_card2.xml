<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_baza"
    tools:context=".Card2">

    <TextView
        android:id="@+id/balance"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:background="@drawable/button_diamond"
        android:fontFamily="@font/rubik"
        android:textColor="#000000"
        android:gravity="center"
        android:text="223 332 ₽"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/cardNum"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:background="@drawable/button_perevod"
        android:fontFamily="@font/rubik"
        android:gravity="center"
        android:textColor="#000000"
        android:text="1111 2222 3333 4444"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/fullName"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:background="@drawable/button_diamond"
        android:fontFamily="@font/rubik"
        android:gravity="center"
        android:textColor="#000000"
        android:text="Попов Григорий Павлович"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17" />

    <Button
        android:id="@+id/transfer"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/perevod"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>